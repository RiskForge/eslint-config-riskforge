{
  "name": "eslint-config-riskforge",
  "version": "0.1.8",
  "description": "Standard linting rules used at RiskForge",
  "homepage": "https://github.com/riskforge/eslint-config-riskforge#readme",
  "bugs": {
    "url": "https://github.com/riskforge/eslint-config-riskforge/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/riskforge/eslint-config-riskforge.git"
  },
  "license": "MIT",
  "author": "Sean Bruton <sean@riskforge.io>",
  "main": "config.js",
  "scripts": {
    "clean": "rimraf package-lock.json node_modules",
    "format": "run-s format-doctoc format-package-json format-imports format-eslint",
    "format-doctoc": "doctoc --github --maxlevel 3 --notitle ./README.md",
    "format-eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx --fix ./ >/dev/null 2>&1 || true",
    "format-imports": "import-sort --write '**/*.{js,jsx,ts,tsx}'",
    "format-package-json": "sort-package-json",
    "lint": "run-p lint-eslint lint-markdown lint-cspell",
    "lint-cspell": "cspell .\\* .\\*\\*/\\* \\*\\*/\\*",
    "lint-eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./",
    "lint-markdown": "markdownlint --ignore coverage --ignore dist --ignore node_modules '**/*.md' '.**/**/*.md'",
    "lint-watch": "onchange 'src/**/*' --initial --kill --delay 1000  -- npm run lint",
    "upgrade": "npm-check-updates -u"
  },
  "pre-commit": [
    "format",
    "lint"
  ],
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "cspell": "^4.0.57",
    "doctoc": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-unicorn": "^18.0.1",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-babylon": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "markdownlint-cli": "^0.22.0",
    "npm-check-updates": "^4.1.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "pre-commit": "^1.2.2",
    "sort-package-json": "^1.42.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-unicorn": "^18.0.1"
  }
}
